#!/usr/bin/env ruby

###
# UWChat Client - bfaloona
#
# usage: uwchat-client port_number

require 'uwchat'

if ARGV
  opt = ARGV.shift

  case opt
  when '-h'
    puts "usage: uwc-client [port]"

  when /^d+$/
    client = UWChat::Client.new( opt )

  else
    client = UWChat::Client.new
  end

end

client.start
