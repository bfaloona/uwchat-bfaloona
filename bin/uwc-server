#!/usr/bin/env ruby

###
# UWChat Server - bfaloona
#
# usage: uwchat-server port_number debug_flag

require 'uwchat'

if ARGV
  opt = ARGV.shift

  case opt
  when '-h'
    puts "usage: uwc-server [port [debug]]"

  when /^d+$/
    server = UWChat::Server.new( opt )

  else
    server = UWChat::Server.new
  end

  if ARGV and ARGV[0]
    server.debug = true
  end

end

server.start
server.join
